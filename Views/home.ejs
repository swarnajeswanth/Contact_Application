<html>
    <head>
        <title>
           <%= title %>
        </title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1>
            <i class="fa fa-address-book"></i>
           My Contact List 
        </h1>
                
            <ul id="Contact_row">
                
                <% for(let i of contact_list){ %> 
                    <li class="Contact_info">
                        <p id="name"><%= i.name %></p>
                        <p id="phone"><%= i.phone %></p>
                        <a href="/Delete-Contact/?id=<%= i.id %> " class="delete"><input type="button"  value="Delete"></a>
                    </li>
                    
                <%}%>
            </ul>

        
        <form action="/create-contact" method="post" >
            <input type="text"class="length"  name="name" placeholder="Name " required>
            <input type="tel" class="length" pattern="[0-9]{10}" name="phone" placeholder="Phone_Number" required>
            <input type="submit" value="Add">
        </form>
        <script src="/js/Home.js"></script>
    </body>
</html>